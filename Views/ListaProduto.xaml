<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppMinhasCompras.Views.ListaProduto"
             Title="Minhas Compras">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Somar"/>
        <ToolbarItem Text="Adcionar" Clicked="toolbaritem_Clicked"/>
    </ContentPage.ToolbarItems>
    
    <VerticalStackLayout>
        <SearchBar x:Name="txt_search" Placeholder="Busque o Produto"/>
        <ListView x:Name="lst_produtos">
            <ListView.Header>
                <Grid ColumnDefinitions="*, *, *, *, *, *">
                    <Label Grid.Column="0" Text="{Binding Id}"/>
                    <Label Grid.Column="1" Text="{Binding Descricao}"/>
                    <Label Grid.Column="2" Text="{Binding Preco}"/>
                    <Label Grid.Column="3" Text="{Binding Quantidade}"/>
                    <Label Grid.Column="4" Text="{Binding Total}"/>
                </Grid>
                      
            </ListView.Header>
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <ViewCell.ContextActions>
                            <MenuItem Text="Remover"/>
                        </ViewCell.ContextActions>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </VerticalStackLayout>
</ContentPage>