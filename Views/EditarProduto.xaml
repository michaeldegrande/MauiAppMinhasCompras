<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppMinhasCompras.Views.EditarProduto"
             Title="Editar Produto"
             BackgroundColor="MintCream">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Salvar" Clicked="ToolbarItem_Clicked"/>
    </ContentPage.ToolbarItems>

    <StackLayout Padding="20" Spacing="15" BackgroundColor="MintCream">
        <Label Text="Descrição:" />
        <Entry x:Name="txt_descricao" Placeholder="Digite a descrição"/>

        <Label Text="Quantidade:" />
        <Entry x:Name="txt_quantidade" Keyboard="Numeric" Placeholder="0"/>

        <Label Text="Preço:" />
        <Entry x:Name="txt_preco" Keyboard="Numeric" Placeholder="0,00"
               TextChanged="TxtPreco_TextChanged"/>
    </StackLayout>
</ContentPage>
